
@{
    ViewData["Title"] = "New";
}

@model Aniversariante

<h1>Criar Novo aniversariante</h1>


<h4>Aniversariante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="primeiroNome" class="control-label">Primeiro Nome</label>
                <input asp-for="primeiroNome" class="form-control" />
                <span asp-validation-for="primeiroNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="segundoNome" class="control-label">Segundo Nome</label>
                <input asp-for="segundoNome" class="form-control" />
                <span asp-validation-for="segundoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dataAniversario" class="control-label">Data de Aniversario</label>
                <input type="date" asp-for="dataAniversario" class="form-control" />
                <span asp-validation-for="dataAniversario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
